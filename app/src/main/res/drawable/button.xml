<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffa300" />
            <gradient android:angle="-90" android:endColor="#ffa300" android:startColor="#ffa300" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffa300" />
            <solid android:color="#ffa300" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffa300" />
            <gradient android:angle="-90" android:endColor="#fff" android:startColor="#fff" />
        </shape>
    </item>
</selector>