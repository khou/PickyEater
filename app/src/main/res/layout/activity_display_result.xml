<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".DisplayResultActivity">

    <ImageView
        android:id="@+id/banner_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/banner"
        android:scaleType="centerCrop"
        android:src="@drawable/banner" />

    <TextView
        android:id="@+id/business_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_result"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:lines="2"
        android:padding="15dp"
        android:textColor="#ffa300"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/business_rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/business_name_view"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

</RelativeLayout>